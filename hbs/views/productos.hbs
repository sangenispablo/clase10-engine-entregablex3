<main>
  <section class="py-2 text-center container">
    <div class="row py-lg-1">
      <div class="col-lg-6 col-md-8 mx-auto">
        {{#if tieneProductos}}
          <h1 class="fw-light">Listado de Productos</h1>
        {{else}}
          <h1 class="fw-light">Listado sin Productos</h1>
        {{/if}}
      </div>
    </div>
  </section>

  {{#if tieneProductos}}
    <div class="container py-2 bg-light">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Imagen</th>
            </tr>
          </thead>
          <tbody>
            {{#each productos}}
              <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>$ {{this.price}}</td>
                <td>
                  <img src={{this.thumbnail}} />
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/if}}
</main>